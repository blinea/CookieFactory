@model CookieFactory.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1 class="text-center text-warning pt-3">Edit Product</h1>


<div class="row pt-5">

        <div class="col text-center">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label text-center text-light h5 mr-3"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label text-center text-light h5 pt-3"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryRefId" class="control-label text-center text-light h5 pt-3">Category</label>
                    <select asp-for="CategoryRefId" class="form-control" asp-items="ViewBag.CategoryRefId"></select>
                    <span asp-validation-for="CategoryRefId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label text-center text-light h5 pt-3"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label text-center text-light h5 pt-3"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label text-center text-light h5 pt-3"></label>
                    <input asp-for="ImageFile" accept="image/*" asp-append-version="true" ) />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save Changes" class="btn btn-warning btn-lg" />
                </div>
            </form>
        </div>
    <div class="col-md mt-5">
        <img src="https://media.giphy.com/media/QvBjx0wOsCXbq/giphy.gif" class="img-fluid img-thumbnail" />
    </div>
</div>




<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
