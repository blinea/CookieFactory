@model IEnumerable<CookieFactory.Models.Product>

@{
    ViewData["Title"] = "Search";
}

<h1 class="text-center text-warning pt-3">Product Search</h1>

<div class="row pt-5">
    <div class="col-md">
        <form asp-action="ShowSearchResults">
            <div class="form-group p-5 text-center">
                <label for="SearchCategory" class="control-label text-center text-light h5 p-3">Enter Product Name</label>
                <input name="SearchCategory" class="form-control p-3" />
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Search" class="btn btn-warning btn-lg" />
            </div>
        </form>
    </div>
    <div class="col-md mt-4">
        <img src="https://media.giphy.com/media/HGe4zsOVo7Jvy/giphy.gif" class="img-fluid img-thumbnail" />
    </div>
</div>

<div>
    <a asp-action="GuestIndex" class="text-info">Back to List</a>
</div>
