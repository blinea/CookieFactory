@model IEnumerable<CookieFactory.Models.Email>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-warning pt-3">Email Requests</h1>

<div class="container-fluid text-center align-middle">
    <table class="table table-hover table-responsive table-borderless table-dark mt-5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Attatchment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td class="align-middle">
                        <a href=@("/attatchments/" + item.Attatchment) target="_blank">@Html.DisplayFor(modelItem => item.Attatchment)</a>
                    </td>
                    <td class="align-middle">
                        <!--
                        <a asp-action="Edit" asp-route-id="@item.EmailId">Edit</a> |
                        -->
                        <a asp-action="Details" asp-route-id="@item.EmailId"><img class="mt-4" src="~/assets/reply.png" width="30px" height="30px" /></a>

                        <a class="pt-3" asp-action="Delete" asp-route-id="@item.EmailId"><img class="mt-4 ml-2" src="~/assets/delete.png" width="30px" height="30px" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>