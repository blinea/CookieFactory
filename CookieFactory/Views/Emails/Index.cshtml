@model IEnumerable<CookieFactory.Models.Email>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attatchment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>              
                <a href=@("/attatchments/" + item.Attatchment) target="_blank">@Html.DisplayFor(modelItem => item.Attatchment)</a>
            </td>
            <td>
                <!--
                <a asp-action="Edit" asp-route-id="@item.EmailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmailId">Details</a> |
                -->
                <a asp-action="Delete" asp-route-id="@item.EmailId"><img class="mt-4" src="~/assets/delete.png" width="30px" height="30px" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
