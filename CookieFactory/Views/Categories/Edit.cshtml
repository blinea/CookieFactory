@model CookieFactory.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="text-center text-warning pt-3">Edit Category</h1>

<div class="row pt-5">
    <div class="col text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-center text-light h5 mr-3"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-center text-light h5 mr-3"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save Changes" class="btn btn-warning btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
